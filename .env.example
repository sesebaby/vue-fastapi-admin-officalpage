# 应用配置
DEBUG=False
SECRET_KEY=change-this-to-a-very-secret-key-in-production

# 数据库配置（选择其中一种）
# SQLite（默认，适合开发和小型部署）
DATABASE_URL=sqlite:///app/data/db.sqlite3

# MySQL（适合生产环境）
# DATABASE_URL=mysql://admin:password@mysql:3306/vue_fastapi_admin

# PostgreSQL（适合生产环境）
# DATABASE_URL=postgresql://admin:password@postgres:5432/vue_fastapi_admin

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天

# 跨域配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3060", "http://localhost"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# 初始管理员账号
INIT_ADMIN_USERNAME=admin
INIT_ADMIN_PASSWORD=123456
INIT_ADMIN_EMAIL=admin@example.com

# 日志级别
LOG_LEVEL=INFO

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=9999
SERVER_WORKERS=1